@model IEnumerable<RestoranTask.Entities.Drink>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Drinks</title>
</head>
<body>
    <div>

        <h1>Drinks</h1>
        <div>
            <img style=" margin-left:10px ; display:inline-block; width:100px;height:100px" src="~/img/Coca.png" />
            <img style=" display:inline-block; margin-left: 10px;  width: 100px; height: 100px" src="~/img/f.jpg" />
            <img style=" display: inline-block; margin-left: 10px;  width: 100px; height: 100px" src="~/img/pp.jpg" />
        </div>
        @foreach (var item in Model)
        {

            <h2 style="display:inline-block; margin-left:45px">@item.Name</h2>
        }
        <br />
        @foreach (var item in Model)
        {
            <h2 style="display:inline-block;margin-left:50px">@item.Price</h2>
        }

    </div>
</body>
</html>
